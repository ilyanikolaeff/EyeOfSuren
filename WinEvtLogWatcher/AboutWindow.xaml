<dx:ThemedWindow x:Class="WinEvtLogWatcher.AboutWindow" mc:Ignorable="d" Title="О программе" SizeToContent="WidthAndHeight" 
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:WinEvtLogWatcher" 
    xmlns:userControls="clr-namespace:WinEvtLogWatcher.UserControls" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5">
            <Image Source="Images\work.jpg" Width="{Binding ActualWidth, ElementName=aboutTextBlock}" Height="Auto" Margin="5" />
            <TextBlock x:Name="aboutTextBlock" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="5" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" IsCancel="True" Margin="5" />
                <Button Content="Сброс настроек" Margin="5" x:Name="restoreDefaultButton" Click="restoreDefaultButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</dx:ThemedWindow>